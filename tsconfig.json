{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],

    "strict": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src"]
}
